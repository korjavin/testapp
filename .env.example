# Application
APP_ENV=development
APP_PORT=8080
LOG_LEVEL=debug

# Database
DB_PATH=data.db

# Telegram Bot
TG_BOT_TOKEN=your_bot_token_here
TG_WEBHOOK_URL=https://your-domain.com/webhook

# Litestream (separate credentials for backup)
LITESTREAM_R2_ACCESS_KEY_ID=your_r2_access_key
LITESTREAM_R2_SECRET_ACCESS_KEY=your_r2_secret_key
LITESTREAM_R2_ACCOUNT_ID=your_r2_account_id
LITESTREAM_R2_BUCKET_NAME=testapp-db
LITESTREAM_REPLICATE_URL=s3://your_r2_account_id.r2.dev/testapp-db

# Session
COOKIE_SECRET=your_cookie_secret_here_min_32_chars
